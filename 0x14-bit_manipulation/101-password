#include <stdio.h>
#include <string.h>

/**
 * main - Entry point. Verifies if the password inputted by the user matches a given password
 *
 * Return: Always 0 (Success)
 */
int main(void)
{
char password[100];
char actual_password[] = "Hol";  // Replace this with the actual password
    
printf("Please enter the password: ");
scanf("%s", password);
    
if (strcmp(password, actual_password) == 0) {
printf("Congratulations!\n");
} else {
printf("Access denied.\n");
}
    
return (0);
}

